
{
            "id": "/db/mongo/mongo2",
            "mem": 1024,
            "cpus": 0.5,
            "instances": 1,
            "cmd": "mongod --replSet set1",
            "constraints": [
                ["hostname", "UNIQUE"]
            ],
            "healthChecks": [{
                    "protocol": "TCP"
                }],
            "container": {
            "type": "DOCKER",
            "volumes": [
                {
               "containerPath": "/data/db",
               "hostPath": "/opt/mongodb/repset1/data",
               "mode": "RW"
           },
                {
               "containerPath": "/data/backups",
               "hostPath": "/opt/mongodb/backups",
               "mode": "RW"
           }
           ],
            "docker": {
                "image": "registry.marathon.mesos:5000/mesos-do/mongo:latest",
                "parameters": [
            { "key": "hostname","value": "mongo2-mongo-db.marathon.mesos" } 
                ],
                "network": "BRIDGE",
                "portMappings": [
                { "hostPort": 27017,
                    "servicePort": 0,
                    "containerPort": 27017,
                    "protocol":"tcp"
                    }
                ],
                "forcePullImage":true
            }
            },
            "env": {
            "MASTER":"mongo1-mongo-db.marathon.mesos",
            "NODE2":"mongo2-mongo-db.marathon.mesos",
            "NODE3":"mongo3-mongo-db.marathon.mesos"
            }
        }